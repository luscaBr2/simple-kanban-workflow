{
    "version": 2,
    "builds": [
        {
            "src": "api/src/server.ts",
            "use": "@vercel/node",
            "config": {
                "buildCommand": "npm install --prefix api && npm run build --prefix api",
                "includeFiles": ["api/tasks.json"]
            }
        },
        {
            "src": "frontend/index.html",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "npm install --prefix frontend && npm run build --prefix frontend",
                "distDir": "frontend/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/src/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}
