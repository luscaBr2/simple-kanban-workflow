{
    "functions": {
        "api/index.ts": {
            "includeFiles": "api/src/data/tasks.json"
        }
    },

    "rewrites": [
        {
            "source": "/api/v1/tasks/:path*",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/v1/tasks",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/v1",
            "destination": "/api/index.ts"
        }
    ]
}
