{
    "version": 2,
    "builds": [
        {
            "src": "api/src/server.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["api/tasks.json"]
            }
        },
        {
            "src": "frontend/index.html",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/src/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}
